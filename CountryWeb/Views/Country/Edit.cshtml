@model Country

@{
    ViewData["Title"] = "Edit";
}

<h1>Edite</h1>

<h4>Country</h4>
<hr />

<form enctype="multipart/form-data" asp-controller="country" asp-action="save" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for=Description class="form-control" id="exampleFormControlTextarea1" rows="10" cols="40"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MspUrl" class="control-label"></label>
        <input asp-for="MspUrl" class="form-control" />
        <span asp-validation-for="MspUrl" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}